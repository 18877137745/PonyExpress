<resources>

    <style name="AppTheme" parent="AppBaseTheme" />

    <style name="AppTheme.NoActionBar" parent="AppBaseTheme.NoActionBar" />

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/deep_sky_blue</item>
        <item name="colorPrimaryDark">@color/dodger_blue</item>
        <item name="colorAccent">@color/green</item>
        <item name="android:windowBackground">@drawable/ic_background</item>
    </style>

    <style name="AppBaseTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/deep_sky_blue</item>
        <item name="colorPrimaryDark">@color/dodger_blue</item>
        <item name="colorAccent">@color/green</item>
        <item name="android:windowBackground">@drawable/ic_background</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="TextNormal">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>